<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <Button android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="Pay"
        android:id="@+id/pay_for_spot_button"
        android:onClick="onClickPayForSpot"
        android:background="#ffa200"
        android:textSize="40dp"
        android:layout_margin="10dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginRight="1dp"
        android:layout_marginBottom="1dp" />

    <Button android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:text="View Spaces"
        android:id="@+id/button_spots_taken"
        android:onClick="onClickSpotsTaken"
        android:background="#094fc0"
        android:textSize="40dp"
        android:layout_margin="10dp" />

</LinearLayout>
